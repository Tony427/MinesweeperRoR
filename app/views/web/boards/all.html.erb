<div class="container">
  <h1>All Generated Boards</h1>

  <% if @boards.any? %>
    <div class="list-group mt-4">
      <% @boards.each do |board| %>
        <div class="list-group-item">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= link_to board.name, board_path(board) %></h5>
            <small><%= time_ago_in_words(board.created_at) %> ago</small>
          </div>
          <p class="mb-1">Created by: <%= board.email %></p>
          <small>Dimensions: <%= board.width %>x<%= board.height %> with <%= board.mines_count %> mines</small>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="mt-4">No boards have been generated yet.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-primary' %>
  </div>
</div>