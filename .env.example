# Environment Configuration Template
# Copy this file to .env for local development

# Rails Configuration
RAILS_ENV=development
RAILS_MASTER_KEY=your_master_key_here

# Database Configuration (for staging/production)
DATABASE_URL=postgresql://username:password@host:port/database_name
DATABASE_HOST=localhost
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_PORT=5432

# Redis Configuration (for staging/production)
REDIS_URL=redis://localhost:6379/0

# Heroku Configuration
RAILS_SERVE_STATIC_FILES=enabled
RAILS_LOG_TO_STDOUT=enabled

# Performance Configuration
WEB_CONCURRENCY=2
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5

# Logging Configuration
LOG_LEVEL=info
ENABLE_QUERY_LOGS=false

# Staging Environment Specific
SHOW_DETAILED_ERRORS=false

# Action Cable Configuration (optional)
ACTION_CABLE_URL=wss://your-app-name.herokuapp.com/cable

# Application Configuration
HEROKU_APP_NAME=your-app-name