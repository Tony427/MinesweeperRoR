<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Create a New Minesweeper Board</h2>

      <%= form_with(model: @board, url: boards_path, method: :post, local: true, html: { class: "mt-4" }) do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :name, "Board Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="row">
          <div class="col">
            <div class="mb-3">
              <%= form.label :width, class: "form-label" %>
              <%= form.number_field :width, class: "form-control", required: true, min: 2 %>
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <%= form.label :height, class: "form-label" %>
              <%= form.number_field :height, class: "form-control", required: true, min: 2 %>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :mines_count, "Number of Mines", class: "form-label" %>
          <%= form.number_field :mines_count, class: "form-control", required: true, min: 1 %>
        </div>

        <%= form.submit "Generate Board", class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-md-8">
      <h2>10 Most Recently Generated Boards</h2>

      <% if @recent_boards.any? %>
        <div class="list-group mt-4">
          <% @recent_boards.each do |board| %>
            <div class="list-group-item">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= link_to board.name, board_path(board) %></h5>
                <small><%= time_ago_in_words(board.created_at) %> ago</small>
              </div>
              <p class="mb-1">Created by: <%= board.email %></p>
            </div>
          <% end %>
        </div>

        <div class="mt-3">
            <%= link_to "View all generated boards", all_boards_path, class: "btn btn-secondary" %>
        </div>
      <% else %>
        <p class="mt-4">No boards have been generated yet.</p>
      <% end %>
    </div>
  </div>
</div>
