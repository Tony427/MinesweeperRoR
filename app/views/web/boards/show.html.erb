        <% row.each do |cell| %>
          <div class="cell" style="width: 2rem; height: 2rem; border: 1px solid #ccc; display: flex; justify-content: center; align-items: center; background-color: #f0f0f0;">
            <%= cell == 'X' ? 'ğŸ’£' : 'â–¡' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
