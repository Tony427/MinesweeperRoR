{
  "name": "Minesweeper RoR",
  "description": "A Ruby on Rails Minesweeper game application",
  "repository": "https://github.com/your-username/minesweeper-ror",
  "keywords": ["rails", "ruby", "minesweeper", "game"],
  "website": "https://your-app-name.herokuapp.com",
  "success_url": "/",
  "env": {
    "RAILS_ENV": {
      "description": "Rails environment (staging or production)",
      "value": "staging"
    },
    "RAILS_MASTER_KEY": {
      "description": "Rails master key for encrypted credentials",
      "generator": "secret"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "description": "Enable static file serving on Heroku",
      "value": "enabled"
    },
    "RAILS_LOG_TO_STDOUT": {
      "description": "Log to stdout for Heroku logging",
      "value": "enabled"
    },
    "LOG_LEVEL": {
      "description": "Application log level",
      "value": "info"
    },
    "WEB_CONCURRENCY": {
      "description": "Number of Puma workers",
      "value": "2"
    },
    "RAILS_MAX_THREADS": {
      "description": "Maximum number of threads per worker",
      "value": "5"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "stack": "heroku-24",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate db:seed"
  }
}