# Environment variables for Minesweeper RoR application

# Secret key for Rails application
# Generate a new secret key by running: bundle exec rails secret
SECRET_KEY_BASE=your_secret_key_base_here

# Rails environment
RAILS_ENV=production

# Asset serving configuration for Docker
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Database configuration (SQLite in container)
RAILS_MAX_THREADS=5